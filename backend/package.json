{
  "name": "auth-backend",
  "version": "1.0.0",
  "description": "Node.js Express TypeScript backend with MongoDB and role-based authentication",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=production node --max-old-space-size=512 dist/server.js",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node --max-old-space-size=512 dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node --max-old-space-size=512 dist/server.js",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "seed": "ts-node src/seed/seedUsers.ts",
    "seed:build": "npm run build && node dist/seed/seedUsers.js",
    "seed:test": "ts-node src/seed/testSeed.ts",
    "create:institution": "ts-node src/seed/createInstitutionAccount.ts",
    "create:institution:full": "ts-node src/seed/createInstitutionWithAccounts.ts",
    "create:institution:role": "ts-node src/seed/createInstitutionRoleAccount.ts",
    "test:institution:login": "ts-node src/seed/testInstitutionLogin.ts",
    "create:college": "ts-node src/seed/createCollegeAccount.ts",
    "create:college:accounts": "ts-node src/seed/createCollegeAccounts.ts",
    "verify:institution": "ts-node src/seed/verifyInstitutionAccounts.ts",
    "delete:institution": "ts-node src/seed/deleteInstitutionAccounts.ts"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "mongodb",
    "authentication",
    "jwt",
    "otp"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.4",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "crypto": "^1.0.1",
    "docx": "^9.5.1",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "file-saver": "^2.0.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.9",
    "puppeteer": "^24.23.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mongoose": "^5.11.97",
    "@types/nodemailer": "^6.4.14",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
